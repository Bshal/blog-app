# npm configuration for faster installs
registry=https://registry.npmjs.org/

# Reduce retry attempts and timeouts
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Use faster installation method
prefer-offline=false
progress=true

# Reduce logging verbosity (faster)
loglevel=warn

# Use legacy peer deps to avoid resolution issues
legacy-peer-deps=false

# Performance optimizations
fund=false
audit=false
